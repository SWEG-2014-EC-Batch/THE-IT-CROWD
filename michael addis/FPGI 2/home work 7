
#include <iostream>
using namespace std;

double product(int num)
{

    double total = 1;
    int i = 1;
    while (i <= num)
    {
        double numbers;
        cout << "enter the " << i << "numbere?" << endl;
        cin >> numbers;
        total = total * numbers;
        i++;
    }
    return total;
}

int main()
{
    double result;
    int n;
    cout << "how many number will you enter:";
    cin >> n;
    result = product(n);

    cout << "the product of the numbers is: " << result;
    return 0;
}
