#include<iostream>
using namespace std;

int main() {
//Mike Getu
    char c;
    int n;
    cout << "Enter an uppercase letter: ";
    cin >> c;
    // Convert the entered letter to its corresponding integer value
    n = c - 'A' + 1;
    //THE FIRST HALF LOOP

//Mike Gebrewold
   for (int i = n; i >= 1; i--) {
        for (int j = 1; j <= n - i; j++) {
            cout << "  ";
        }
        for (int j = i; j >= 1; j--) {
            cout << char('A' + j - 1) << " ";
        }


//Mike Siyamreg


//Mike Alem


//Mike Addis
        for (int j = 2; j <= i; j++) {
            cout << char('A' + j - 1) << " ";
        }
        cout << endl;
    }



return 0;
}
